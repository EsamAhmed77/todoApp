<%- include('header') -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% if (listItems.length === 0 ) { %>
  <div class="item" style="justify-content: center"><p>Add Tasks</p></div>
  <% } else { %> <% listItems.forEach((item) => { %>
  <form action="/delete" method="POST">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onchange="this.form.submit()"
      />
      <p><%=item.name%></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>" />
  </form>
  <% }) %> <% } %>

  <form class="item" action="/" method="POST">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="listAddBtn" value="<%=listTitle%>">+</button>
  </form>
</div>
<%- include('footer') -%>
